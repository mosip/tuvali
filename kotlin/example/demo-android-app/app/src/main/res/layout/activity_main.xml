<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/loaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/loader"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:visibility="visible" />

        <TextView
            android:id="@+id/loadingText"
            android:layout_width="289dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:textAlignment="center" />

        <TextView
          android:id="@+id/qrCodeData"
          android:layout_width="289dp"
          android:layout_height="85dp"
          android:layout_gravity="center"
          android:textAlignment="center" />

        <Button
            android:id="@+id/cancelLoadingBtn"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/cancelButtonText" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/actionsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/walletButton"
            android:layout_width="168dp"
            android:layout_height="54dp"
            android:text="@string/WALLET_BUTTON_NAME" />

        <Button
            android:id="@+id/verifierButton"
            android:layout_width="168dp"
            android:layout_height="54dp"
            android:text="@string/VERIFIER_BUTTON_NAME" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sendDataLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/transferText"
            android:layout_width="289dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:textAlignment="center" />

  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
